[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg,
    .venv,
    venv,
    env,
    ENV,
    .tox,
    .pytest_cache,
    .coverage,
    htmlcov,
    .mypy_cache,
    .nox,
    .ipynb_checkpoints,
    .DS_Store,
    node_modules,
    .next,
    out,
    .idea,
    .vscode,
    *.swp,
    *.swo,
    .DS_Store
per-file-ignores =
    __init__.py: F401, F403
    tests/*: F401, F403, F405, F811, F841, E501
    exo/interfaces/web/*: F401, F403, F405, F811, F841, E501
    exo/interfaces/electron/*: F401, F403, F405, F811, F841, E501
max-complexity = 10
